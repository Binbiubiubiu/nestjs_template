{
  "name": "nestjs-template",
  "version": "0.0.1",
  "description": "a template for nestjs",
  "author": "lvbin",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:prev": "cross-env NODE_ENV=provision ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "cross-env NODE_ENV=development tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js ",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "cz": "git-cz"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "@nestjs/graphql": "^7.2.1",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/platform-socket.io": "^7.0.7",
    "@nestjs/serve-static": "^2.1.0",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/typeorm": "^7.0.0",
    "@nestjs/websockets": "^7.0.7",
    "@nestjsx/crud": "^4.4.2",
    "@nestjsx/crud-typeorm": "^4.4.2",
    "apollo-server-express": "^2.9.3",
    "cache-manager": "^2.10.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "compression": "^1.7.4",
    "cross-env": "^5.2.1",
    "crypto": "^1.0.1",
    "csurf": "^1.10.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.0.0",
    "graphql": "^14.6.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.6",
    "helmet": "^3.21.0",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "mysql": "^2.18.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.5",
    "socket.io-redis": "^5.2.0",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/csurf": "^1.9.35",
    "@types/express": "4.16.1",
    "@types/express-rate-limit": "^3.3.2",
    "@types/helmet": "^0.0.44",
    "@types/jest": "24.0.11",
    "@types/multer": "^1.4.0",
    "@types/node": "11.13.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "2.0.7",
    "@types/swagger-ui-express": "^4.1.1",
    "cz-conventional-changelog": "3.1.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "tsc-watch": "^4.1.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "_moduleAliases": {
    "src": "./dist"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
